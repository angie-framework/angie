#!/bin/env node

import Config from '../src/config';
import Angular from '../src/index';
import createProject from '../src/util/scaffold/project';

const p = process,
    config = new Config();

let args = p.argv;

args.splice(0, 2);

switch (args[0]) {
    case 'server':
        require('../src/server');
        break;
    case 'create':
        createProject(args[1]);
    case 'sync':
        require('../src/database');
        break;
    default:
        require('../src/server');
}

let app = new Angular();
export default app;

